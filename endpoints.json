{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 33,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "returns a single article with a specific article id, in this case 33",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 33,
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "returns the comments associated with an article",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 10,
          "votes": 0,
          "created_at": "2020-06-20 08:24:00.000000",
          "author": "icellusedkars",
          "body": "Text from the comment..",
          "article_id": 3
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "returns the comment that was posted",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 19,
          "article_id": 2,
          "votes": 0,
          "author": "rogersop",
          "body": "Text from the comment..",
          "created_at": "2020-06-20 08:24:00.000000"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "returns the updated article",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "article": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 33,
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 10,
          "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "returns no content",
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "serves an array of user objects",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
        "username": "butter_bridge",
        "name": "jonny!",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}